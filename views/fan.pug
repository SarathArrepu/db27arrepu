extends layout

block content

  h1= title
  - let array=[{"Brand":"Coffee","price":14,"color":"red"},{"Brand":"Usha","price":17,"color":"green"},{"Brand":"cameron","price":20,"color":"orange"}]
  - let items = results
   div(class="container-fluid")
    div(class="row m-1")
     each item in array
      - let destination = `dispatch(\"/fan/update?id=${item._id}\")`
      - let detail=`buy(\"/fan/detail?id=${item._id}\")`
      - let del=`buy(\"/fan/delete?id=${item._id}\")`
      div
      div(class="col-sm-4",class="m-l") Brand: #{item.Brand}
      div(class="col-sm-4",class="m-l") price: #{item.price}
      div(class="col-sm-4",class="m-l") price: #{item.color}
        button.btn( class="btn-primary ml-1", onclick= destination) Update
        button.btn( class="btn-dark ml-2", onclick=detail ) Get Detail
        button.btn( class="btn-warning ml-2", onclick=del ) Delete



   script.
     function dispatch(path){
       window.location.href=path
     }

